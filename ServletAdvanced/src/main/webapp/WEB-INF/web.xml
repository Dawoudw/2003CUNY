<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
  <param-name>cheer</param-name>
  <param-value>let's go Gators!!</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>EnglishServlet</servlet-name>
  	<display-name>EnglishServlet</display-name>
  	<description></description>
  	<servlet-class>dev.ranieri.servlets.EnglishServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SpanishServlet</servlet-name>
  	<display-name>SpanishServlet</display-name>
  	<description></description>
  	<servlet-class>dev.ranieri.servlets.SpanishServlet</servlet-class>
  	
  	<init-param>
  	<param-name>Greeting</param-name>
  	<param-value>Hola mundo</param-value>
  	</init-param>
  	
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>dev.ranieri.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>HomePageServlet</servlet-name>
  	<display-name>HomePageServlet</display-name>
  	<description></description>
  	<servlet-class>dev.ranieri.servlets.HomePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EnglishServlet</servlet-name>
  	<url-pattern>/EnglishServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SpanishServlet</servlet-name>
  	<url-pattern>/SpanishServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>HomePageServlet</servlet-name>
  	<url-pattern>/HomePageServlet</url-pattern>
  </servlet-mapping>
</web-app>
